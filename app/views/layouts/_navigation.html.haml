.container{'data-dropdown' => 'dropdown'}
  .top-bar
    .navbar-header
      .ft-icon
        = link_to(image_tag("logo.png"), root_path)
      
    .navbar-collapse.collapse
      %ul.nav.navbar-nav
        
        %li.active
          %a{href: root_path} Calendar
        %li
          %a{href: events_path} Events
        %li
          %a{href: about_path} About
        %li
          %a{href: contact_path} Contact 
        
      %ul.nav.navbar-nav.navbar-right
        %li.search-bar
          = form_tag events_path, :class => "navbar-form", :role => "search", :method => :get, :validate => true do
            = text_field_tag :query,nil, placeholder: 'Enter your search here'
            = submit_tag 'Search', :name => nil
        - if admin_signed_in?
          %li
            = link_to 'Logout', destroy_admin_session_path, :method=>'delete'
        - else
          %li
            = link_to 'Login', new_admin_session_path
        - if admin_signed_in?
          %li
            = link_to 'Edit Account', edit_admin_registration_path
          %li
            = link_to "Create Event", new_event_path
        - else
          %li
            = link_to 'Sign up', new_admin_registration_path
    / /.nav-collapse
    
  
